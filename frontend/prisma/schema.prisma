generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native"] // サーバー(Node)上だけ動く
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Course {
  id            String                     @id @default(cuid())
  name          String                     @unique
  description   String?
  level         Int                        @default(1)
  curriculumIds String                     @default("") @db.VarChar(1000)
  curriculums   CourseCurriculumRelation[]
  createdAt     DateTime                   @default(now())
  updatedAt     DateTime                   @default(now()) @updatedAt()
}

model Curriculum {
  id          String                     @id @default(cuid())
  name        String                     @unique
  description String?
  gitHubUrl   String
  imageUrl    String?
  articleUrl  String?
  courses     CourseCurriculumRelation[]
  userAgent   UserAgent                  @relation(fields: [userAgentId], references: [id])
  userAgentId String
  createdAt   DateTime                   @default(now())
  updatedAt   DateTime                   @default(now()) @updatedAt()
}

model CourseCurriculumRelation {
  course       Course     @relation(fields: [courseId], references: [id], onDelete: Cascade)
  courseId     String
  curriculum   Curriculum @relation(fields: [curriculumId], references: [id], onDelete: Cascade)
  curriculumId String
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @default(now()) @updatedAt()

  @@id([courseId, curriculumId])
}

model UserAgent {
  id         String       @id @default(cuid())
  name       String       @unique
  gitHubUrl  String
  Curriculum Curriculum[]
  createdAt  DateTime     @default(now())
  updatedAt  DateTime     @default(now()) @updatedAt()
}
